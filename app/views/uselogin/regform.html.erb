
<% content_for :banner do %>
  	<header>
		<div style="margin-bottom: 10px;">
			<image src="/images/registration_banner.jpg" width="100%" height="200px" />
		</div>
	</header>
<% end %>

<div class="container">
	<%= link_to "<button class='btn btn-success'>Go Back</button>".html_safe, "/", style: "text-decoration:none;", title: "Back To Home" %>
	<hr style="background-color: #ed090c;">
	<h3 style="color:#9D00DB;">	
		Registration From
	</h3>
	<%= form_tag 'getApiRegister',id: "regform", method: "post",:class=>"form-horizontal" do %>	
	  	<div class="form-group row">
			<%= label_tag :name, "Name:", :class=>'col-lg-4 control-label h5 text-right text-danger' %>
			<div class="col-lg-5">
				<%= text_field_tag :name,nil,:class=>'form-control',:placeholder=>"Enter Name",:required=>true%>
			</div>
		</div>

		<div class="form-group row">
			<%= label_tag :email, "Email:", :class=>'col-lg-4 h5 text-right control-label text-danger' %>
			<div class="col-lg-5">
			<%= email_field_tag :email, nil , :class=>'form-control',:placeholder=>"Enter Email Id" ,:required=>true%>
			</div>
		</div>

		<div class="form-group row">	
			<%= label_tag :course, "Course:", :class=>'col-lg-4 h5 text-right control-label text-danger' %>
			<div class="col-lg-5">
				<select name = "course" class='form-control'>
					<%= @courses.each do |course|%>
						<option value = <%= course["course_id"]%>>
							<%= course["course_name"] %>
						</option>
					<% end %>
				</select>
			</div>
		</div>

		<div class="form-group row">	
			<%= label_tag :youtube_id, "Youtube Id:", :class=>'col-lg-4 h5 text-right control-label text-danger' %>
			<div class="col-lg-5">
				<%= text_field_tag :youtube_id, nil , :class=>'form-control',:placeholder=>"Enter Youtube Id" ,:required=>true%>
			</div>
		</div>

		<div class="form-group row">
			<%= label_tag :password, "Password:", :class=>'col-lg-4 h5 text-right control-label text-danger' %>
			<div class="col-lg-5">
				<%= password_field_tag :password,nil,:class=>'form-control',:placeholder=>"Enter Password",:required=>true %>
			</div>
		</div>
		<div class="form-grouprow">
			<div class="col-lg-5" style="margin-left: 33%;">
			<%= submit_tag "Register", :class=>"btn btn-danger", title: "Click to registration" %>
			<%= link_to "<button class='btn btn-primary'>Login Form</button>".html_safe, loginform_path, title: "Go to Login Form", style: "text-decoration:none;"%>
			</div>
		</div>
	<% end %>
</div>