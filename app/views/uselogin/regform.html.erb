<%= link_to "Go Back", "/" %>
<%= form_tag 'getApiRegister',id: "regform", method: "post",:class=>"form-horizontal" do %>	
  	<div class="form-group">
		<%= label_tag :name, "Name:", :class=>'col-lg-4 control-label text-success' %>
		<div class="col-lg-5">
			<%= text_field_tag :name,nil,:class=>'form-control',:placeholder=>"Enter Name",:required=>true%>
		</div>
	</div>

	<div class="form-group">
		<%= label_tag :email, "Email:", :class=>'col-lg-4 control-label text-success' %>
		<div class="col-lg-5">
		<%= email_field_tag :email, nil , :class=>'form-control',:placeholder=>"Enter Email Id" ,:required=>true%>
		</div>
	</div>

	<div class="form-group">	
		<%= label_tag :course, "Course:", :class=>'col-lg-4 control-label text-success' %>
		<div class="col-lg-5">
			<select name = "course" class='form-control'>
				<%= @courses.each do |course|%>
					<option value = <%= course["course_id"]%>>
						<%= course["course_name"] %>
					</option>
				<% end %>
			</select>
		</div>
	</div>

	<div class="form-group">
		<%= label_tag :password, "Password:", :class=>'col-lg-4 control-label text-success' %>
		<div class="col-lg-5">
			<%= password_field_tag :password,nil,:class=>'form-control',:placeholder=>"Enter Password",:required=>true %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-lg-5 col-lg-offset-4">
		<%= submit_tag "Register", :class=>"btn btn-success" %>
		<%= link_to "Login Form", loginform_path%>
		</div>
	</div>
<% end %>