<% content_for :banner do %>
    <header>
    <div style="margin-bottom: 10px;">
      <image src="/images/update_banner.jpg" width="100%" height="200px" />
    </div>
  </header>
<% end %>
<div class="container">
  <%= link_to "<button class='btn btn-success'>Go Back</button>".html_safe, "/", style: "text-decoration: none;", title: "Go to Home" %>
  <hr style="background-color: #ed090c;">
  <h3 style="color:#9D00DB;"> 
    Updation From
  </h3>
  <%= form_tag 'getApiUpdate', id: "updateform", method: "put", :class=>"form-horizontal" do %>
  	<div class="form-group row ">
    		<%= label_tag :name, "Name:",:class=>'col-lg-4 h5 text-right control-label text-danger'%>
    		<div class="col-lg-5">
    			<%= text_field_tag :name, session[:user]["name"],:class=>'form-control', :required=>true %>
    		</div>
    	</div>
    	<%= hidden_field_tag(:email,session[:user]["email"]) %>
  	<div class="form-group row">
    		<%= label_tag :password, "Password:",:class=>'col-lg-4 h5 text-right control-label text-danger' %>
    		<div class="col-lg-5">
    			<%= text_field_tag :password,session[:user]["password"],:class=>'form-control',:required=>true %>
    		</div>
    	</div>
  	<div class="form-group row">
  		<div class="col-lg-5" style="margin-left: 33%;">
          <%= submit_tag "Update", class: "btn btn-danger", title: "click to update" %>
    		</div>
    	</div>
  <% end %>
</div>