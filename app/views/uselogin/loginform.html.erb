<%= link_to "Go Back", "/" %>
<%= form_tag 'getApiLogin', id: "loginform", method: "post",:class=>"form-horizontal" do %>
	<div class="form-group">
	  <%= label_tag :email, "Email:" ,:class=>'col-lg-4 control-label text-danger' %>
	  <div class="col-lg-5">
	  	<%= email_field_tag :email, nil,:class=>'form-control',:placeholder=>"Enter Email Id" ,:required=>true %>
	  </div>
	</div>

	<div class="form-group">
	  <%= label_tag :password, "Password:",:class=>'col-lg-4 control-label text-danger'  %>
	  <div class="col-lg-5">
	  	<%= password_field_tag :password,nil ,:class=>'form-control',:placeholder=>"Enter Password" ,:required=>true %>	  	
	  </div>
	</div>
	<div class="form-group">
		<div class="col-lg-offset-4 col-lg-5">
  			<%= submit_tag "Login", class: "btn btn-danger" %>
			<%= link_to "Registration Form", regform_path %>
  		</div>
  	</div>
<% end %>


